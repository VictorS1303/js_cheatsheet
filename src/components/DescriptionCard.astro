---
const { class: className } = Astro.props;
---

<div class:list={`card ${className}`}>
    <slot />
</div>

<style is:global>
    .container.desc-container
    {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding: 30px;
        width: fit-content;
        overflow: hidden scroll;
    }

    
    .container.desc-container > div
    {
        flex-basis: 1;
    }
    
    .container.desc-container > div p
    {
        font-size: 17px;
        white-space: wrap;
    }

    @media screen and (min-width: 1100px)
    {
        .container.desc-container
        {
            flex-direction: row;
            gap: 60px;
            overflow: hidden;
            height: auto;
            max-height: 500px;
        }

        /* .container.desc-container > *
        {
            max-height: 500px;
        } */
        
        .container.desc-container > .card
        {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

    }

    @media screen and (max-width: 500px)
    {
        .container.desc-container
        {
            height: 600px;
            overflow-x: scroll;
        }
    }
</style>