---
const { class: className } = Astro.props;
---

<div class:list={`card ${className}`}>
    <slot />
</div>

<style is:global>
    .container.desc-container
    {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 80px;
        flex-direction: column;
        justify-content: space-between;
        width: 50vw;
        height: 70vh;
        padding-top: 60px;
        overflow: hidden scroll;
    }

    .container.desc-container > div
    {
        height: 100%;
        width: 100%;
        max-width: 400px;
    }

    .container.desc-container > div p
    {
        font-size: 17px;
        white-space: wrap;
    }

    .code-preview-container
    {
        align-self: baseline;
        margin-top: auto;
    }


    @media screen and (max-width: 767px)
    {
        .selectors-desc-container > div:last-child
        {
            margin-top: 230px;
        }

        .variables-contants-desc-container > div:last-child
        {
            margin-top: 200px;
        }
    }
    

    @media screen and (min-width: 768px)
    {
        .container.desc-container
        {
            flex-direction: row;
            gap: 60px;
            overflow: hidden;
        }

        .container.desc-container > .card
        {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .code-preview-container
        {
            margin-top: auto;
        }
    }
</style>