---
const { class: className } = Astro.props;
---

<div class:list={`card ${className}`}>
    <slot />
</div>

<style is:global>
    .container.desc-container
    {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 100px;
        flex-direction: column;
        justify-content: space-between;
        width: 60vw;
        height: 400px;
        overflow: hidden scroll;
    }

    .container.desc-container > *
    {
        flex-basis: 1;
    }

    .container.desc-container > div
    {
        height: 100%;
        width: 100%;
        max-width: 400px;
    }

    .container.desc-container > div p
    {
        font-size: 17px;
        white-space: wrap;
    }

    .code-preview-container
    {
        align-self: baseline;
        margin-top: auto;
    }

    @media screen and (min-width: 768px)
    {
        .container.desc-container
        {
            flex-direction: row;
            gap: 60px;
            overflow: hidden;
            height: auto;
            max-height: 500px;
        }

        .container.desc-container > *
        {
            max-height: 500px;
        }
        
        .container.desc-container > .card
        {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .code-preview-container
        {
            margin-top: auto;
        }
    }
</style>