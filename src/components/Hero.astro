---
import HeroHeading from './HeroHeading.astro'
import HeroParagraph from './HeroParagraph.astro'
import Button from './Button.astro'
---

<section class="hero" id="hero">
    <HeroHeading/>
    <HeroParagraph/>
    <Button className="btn modal-open-button" id="modal_open_button">
        Code Examples <i class="fas fa-download"></i>
    </Button>
</section>


<style>
    section.hero
    {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }
</style>