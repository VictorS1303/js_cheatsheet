---
import {data} from '../lib/fetch.js'
import Header from './Header.astro'
console.log(data)
---

<Header className="hero-heading" id="hero_heading">
   {
       <h1>
         <span class="secondary-heading">JS</span>
         {
            data.map((heroHeaderText) => (
                <span>{heroHeaderText.hero_header_text}</span>
            ))
        }
       </h1>
   }
    
</Header>

<style>
    h1
    {
        font-size: 3rem;
    }

    h1 span.secondary-heading
    {
        color: var(--secondary-heading-color);
    }
</style>