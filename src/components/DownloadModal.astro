---
import {data} from '../lib/fetch.js'

import Modal from "./Modal.astro"
import DownloadButton from "./DownloadButton.astro"
---

<Modal className="modal download-modal">
    {
        data.map((pdfDownloads) => (
            <div>
                <img src={pdfDownloads.pdf_thumbnails} />
                <DownloadButton
                    href={pdfDownloads.pdf_download_button_href}
                    class="modal-download-btn"
                    id="modal_download_btn"
                    download={pdfDownloads.pdf_download_name}
                >
                    {pdfDownloads.pdf_download_buttons_text} <i class="fas fa-download"></i>
                </DownloadButton>
            </div>
        ))
    }
</Modal>

<style>
    div {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    div img {
        height: 250px;
        width: 100%;
        border-radius: calc(var(--base-border-radius) / 2);
        object-fit: contain;
    }

</style>