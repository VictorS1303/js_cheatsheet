---
import Modal from "./Modal.astro"
import DownloadButton from "./DownloadButton.astro"
---

<Modal className="modal download-modal" id="download_modal">
    <div>
        <img src="/thumbnails/foerste_semester_thumbnail.webp" />
        <DownloadButton
            href="/pdfs/foerste_semester_pdf.pdf"
            class="modal-download-btn"
            id="modal_download_btn"
            download="foerste_semester_pdf"
        >
            1. semester <i class="fas fa-download"></i>
        </DownloadButton>
    </div>

    <div>
        <img src="/thumbnails/andet_semester_thumbnail.webp" />
        <DownloadButton
            href="/pdfs/andet_semester_pdf.pdf"
            class="modal-download-btn"
            id="modal_download_btn"
            download="andet_semester_pdf"
        >
            2. semester <i class="fas fa-download"></i>
        </DownloadButton>
    </div>
</Modal>

<style>
    div
    {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    div img
    {
        height: 200px;
        width: 175px;
        aspect-ratio: 1;
        border-radius: calc(var(--base-border-radius) / 2);
        object-fit: cover;
    }

    @media screen and (min-width: 768px)
    {
        .download-modal
        {
            min-height: 600px;
        }
    }

</style>