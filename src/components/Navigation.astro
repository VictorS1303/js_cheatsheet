<header class="header">
    <nav class="main-nav" id="main_nav">
        <h1 class="logo">
            <span>JS</span> Cheat Sheets
        </h1>
        <ul>
            <li>
                <a href="first_semester.html" class="active">1. semester</a>
            </li>
            <li>
                <a href="second_semester.html">2. semester</a>
            </li>
        </ul>
    </nav>
</header>

<style>
    .menu-toggle-btn
    {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 30px;
        color: #fff;
        cursor: pointer;
        transition: right .5s ease-in, color .15s ease-in;
    }

    .menu-toggle-btn:hover
    {
        color: #ff0;
        transition: color .15s ease-in;
    }

    .menu-toggle-btn.active
    {
        right: 220px;
        transition: right .5s ease-in;
    }

    header
    {
        position: absolute;
        right: -200px;
        height: 100vh;
        width: 200px;
        transition: right .5s ease-in;
        background-color: var(--mobile-header-background-color);
    }

    header.active
    {
        right: 0;
        transition: right .5s ease-in;
    }

    header h1
    {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        white-space: nowrap;
        font-size: 30px;
        color: var(--primary-heading-color);
        font-size: 20px;
    }

    header h1 span
    {
        color: var(--secondary-heading-color);
    }

    header nav
    {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        padding: 30px;
    }

    header nav ul
    {
        position: relative;
        left: 50%;
        transform: translateX(-50%);
    }

    header nav ul > li:not(:last-child)
    {
        margin-bottom: 25px;
    }

    header nav ul li a
    {
        position: relative;
        font-family: 'Noto Sans', sans-serif;
        font-size: 20px;
        color: var(--nav-links-color);
    }

    header nav ul li a::before
    {
        content: '';
        position: absolute;
        bottom: -2px;
        width: 0;
        border-bottom: 2px solid var(--links-hover-border-color);
        transition: width .2s ease-in;
    }

    header nav ul li a:not(.active):hover::before
    {
        width: 100%;
        transition: width .2s ease-in;
    }

    header nav ul li a.active
    {
        border-bottom: 2px solid var(--links-hover-border-color);
    }



    @media screen and (min-width: 768px)
    {
        i
        {
            display: none;
        }

        header
        {
            height: 80px;
            width: 100vw;
            left: 0;
            background-color: transparent;
        }

        header nav
        {
            display: flex;
            justify-content: space-around;
            align-items: center;
            text-align: center;
            height: 100%;
            width: 100%;
        }

        header nav h1
        {
            left: 100px;
            font-size: 25px;
        }

        header nav ul
        {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 30px;
        }

        header nav ul li
        {
            display: inline-block;
        }

        header nav ul > li:not(:last-child)
        {
            margin-bottom: 0;
        }
    }
   
</style>

<script>
    const menuToggleBtn = document.querySelector('#menu_toggle_btn')
    const header = document.querySelector('header')


    menuToggleBtn.addEventListener('click', toggleMenu)

    function toggleMenu()
    {
        menuToggleBtn.classList.toggle('active')
        header.classList.toggle('active')

        updateMobileToggleMenuButtonIcon()
    }

    function updateMobileToggleMenuButtonIcon()
    {
        if(menuToggleBtn.classList.contains('fa-bars'))
        {
            menuToggleBtn.classList.remove('fa-bars')
            menuToggleBtn.classList.add('fa-times')
        }
        else
        {
            menuToggleBtn.classList.add('fa-bars')
            menuToggleBtn.classList.remove('fa-times')
        }
    }
</script>